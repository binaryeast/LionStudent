<Window x:Class="LionStudents.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LionStudents"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Login" Height="300" Width="375">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="70" Orientation="Vertical" Height="70" VerticalAlignment="Center" Margin="10" >
            <Image Source="Image/Logo.png" Height="70"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20">
            <StackPanel Orientation="Horizontal" Margin="10" >
                <TextBlock Width="100">ID</TextBlock>
                <TextBox Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Width="100">Password</TextBlock>
                <PasswordBox Width="150" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Width="100" Click="Login">로그인</Button>
                <Button Width="100" Click="CreateUser" Margin="50,0,0,0">새 계정 만들기</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
